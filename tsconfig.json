{
  "compilerOptions": {
    "target": "es5",
    "types": ["react", "react-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~sectionBoard/*": ["./src/sections/admin/dashboard/*"],
      "~pageBoard/*": ["./src/page/admin/dashboard/*"],
    },
    "plugins": [{ "name": "next" }],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "./node_modules/@material-tailwind/*",
    "./node_modules/@material-tailwind/react/index.d.ts",
  ]
}
